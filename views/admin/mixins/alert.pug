mixin alert-changeStatus(time)
  - if (messages.changeStatus)
    .message.changeStatus
      div(
        class="alert alert-success"
        data-time=3000
        show-alert
      ) #{messages.changeStatus} <span close-alert>x</span>

mixin alert-error(time)
  - if (messages.error)
    .message.error
      div(
        class="alert alert-danger"
        data-time=3000
        show-alert
      ) #{messages.error} <span close-alert>x</span>      