mixin searchPug(keywordPUG)
  form(id="form-search")
    .input-group
      input(
        type="text"
        placeholder="Nhập từ khóa"
        name="keyword"
        class="form-control"
        value=keywordPUG
      )
      .input-group-append
        button(
          class="btn btn-success"
          type="submit"
        ) Tìm