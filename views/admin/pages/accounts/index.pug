extends ../../layouts/default.pug

block main 
  h1(class="mb-4") Trang Tài Khoản
  .card.mb-3
    .card-header Danh Sách
    .card-body
      .row 
        .col-8
        .col-4.text-right
          a(
            href=`${prefixAdmin}/accounts/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table(
        class="table table-hover table-sm"

      )
        thead 
          tr 
            th STT 
            th Avt 
            th Họ Tên
            th Phân Quyền
            th Email
            th Trạng Thái
            th Hành Động

        tbody
          each item, index in accounts 
            tr 
              td #{index +1}
              td
                img(
                  src=item.avatar
                  alt=item.fullName 
                  width="100px"
                  height="auto"
                )
              td #{item.fullName}
              td #{item.role.title}
              td #{item.email}
              td
                if(item.status == "active")
                  a(
                    href="javascript:;" 
                    button-change-status
                    data-status="active"
                    data-id=item._id
                    class="badge badge-success"
                    ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    button-change-status
                    data-status="inactive"
                    data-id=item._id
                    class="badge badge-danger"
                    ) Không hoạt động


              td
                a(
                  href=`${prefixAdmin}/accounts/detail/${item.id}/`
                  class="btn btn-secondary btn-sm"
                  ) Chi tiết
                a(
                  href=`${prefixAdmin}/accounts/edit/${item.id}/`
                  class="btn btn-warning btn-sm"
                  ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  data-id=item.id 
                  data-delete
                ) Xóa